{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "secondary_prompt": {
    "template": " \uf061 ",
    "foreground": "#100e23",
    "background": "#ec9706"
  },
  "console_title_template": "{{if .Root}} ‚ö° {{end}}{{.UserName}} ‚ûî üìÅ{{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "display_host": false
          },
          "style": "powerline",
          "template": "{{if .Root}} \uf0e7 {{.UserName}} {{else}} {{.UserName}} {{end}}",
          "foreground": "#100e23",
          "background": "#cfcfc4",
          "type": "session",
          "background_templates": [
            "{{if .Root}}#ff3026{{else}}#cfcfc4{{end}}"
          ]
        },
        {
          "properties": {
            "folder_icon": "\ue5ff",
            "folder_separator_icon": "\ue0b9",
            "home_icon": "\ueb06",
            "mapped_locations": {
              "C:\\Users": "\uf007",
              "C:\\Windows": "\ue62a"
            },
            "mixed_threshold": 8,
            "style": "mixed"
          },
          "style": "powerline",
          "template": " {{ path .Path .Location }} ",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#ec9706",
          "type": "path"
        },
        {
          "style": "powerline",
          "template": " {{ .HEAD }} ",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "background": "#3feb56",
          "type": "git"
        },
        {
          "style": "powerline",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#906cff",
          "type": "python"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "style": "diamond",
          "leading_diamond": "\ue0c2",
          "trailing_diamond": "\ue0c0",
          "template": " \ue70f ",
          "foreground": "#ffffff",
          "background": "#ff4040",
          "type": "exit"
        },
        {
          "properties": {
            "style": "austin"
          },
          "style": "diamond",
          "leading_diamond": "\ue0b2",
          "template": " {{ .FormattedMs }} ",
          "foreground": "#fafafa",
          "background": "#2f2f2f",
          "type": "executiontime"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
